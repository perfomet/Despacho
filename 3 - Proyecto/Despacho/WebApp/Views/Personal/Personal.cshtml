@model Datos.Modelo.Personal
@{
	ViewBag.SeccionTieneTitulo = true;
	ViewBag.Pagina = 14;

	if (Model.Personalid == 0)
	{
		ViewBag.Title = "Despacho - Nuevo Personal";
		ViewBag.TituloSeccion = "Nuevo Personal";
	}
	else
	{
		ViewBag.Title = "Despacho - " + Model.Nombre;
		ViewBag.TituloSeccion = Model.Nombre;
	}
		List<Datos.Modelo.TipoPersonal> listatipodepersonal = Datos.Datos.TipoPersonal.ObtenerTiposdePersonal();
}

@section Less{
	<link rel="stylesheet/less" type="text/css" href="~/Content/less/personal.less" />
}

@section Scripts{
	@Scripts.Render("~/bundles/personal")
}

<div class="m-portlet m-portlet--tab">
	<!--begin::Form-->
	<form class="m-form m-form--fit m-form--label-align-right">
		<div class="m-portlet__body">
			<input type="hidden" value="@Model.Personalid" id="id">
			<input type="hidden" value="@Model.EstaActivo" id="activo">

			<div class="form-group m-form__group row">
				<label for="example-text-input" class="col-2 col-form-label">RUT</label>
				<input class="form-control m-input" type="number" pattern="[0-9]*" maxlength="8" aria-valuemax="99999999" aria-describedby="RUT" value="@Model.RUT" id="rut" style="width: calc(41% - 40px);">
				<label for="example-text-input" class="col-form-label">-</label>
				<input class="form-control m-input" type="text" value="@Model.DV" id="dv" style="width: 40px" maxlength="1">
			</div>
			<div class="form-group m-form__group row">
				<label for="example-text-input" class="col-2 col-form-label">Nombres</label>
				<div class="col-10">
					<input class="form-control m-input" type="text"  value="@Model.Nombre" id="nombre" style="width: 50%">
				</div>
			</div>
			<div class="form-group m-form__group row">
				<label for="example-text-input" class="col-2 col-form-label">Primer Apellido</label>
				<div class="col-10">
					<input class="form-control m-input" type="text" value="@Model.Primerapellido" id="primerapellido" style="width: 50%">
				</div>
			</div>
			<div class="form-group m-form__group row">
				<label for="example-text-input" class="col-2 col-form-label">Segundo Apellido</label>
				<div class="col-10">
					<input class="form-control m-input" type="text" value="@Model.Segundoapellido" id="segundoapellido" style="width: 50%">
				</div>
			</div>
			<div class="form-group m-form__group row">
				<label for="example-text-input" class="col-2 col-form-label">Email</label>
				<div class="col-10">
					<input class="form-control m-input" type="email"  aria-describedby="emailHelp" value="@Model.Email" id="email" style="width: 50%">
				</div>
			</div>
			<div class="form-group m-form__group row">
				<label class="col-form-label col-lg-2 col-sm-12">Tipo de Personal</label>
				<div class="col-lg-10 col-sm-12">
					<select class="form-control m-select2" id="tipopersonalid" name="tipopersonalid">
						@foreach (Datos.Modelo.TipoPersonal tipopersonal in listatipodepersonal)
						{
							<option value="@tipopersonal.TipoPersonalId" @(Model.Tipopersonalid == tipopersonal.TipoPersonalId ? "selected" : "")>@tipopersonal.Descripcion</option>
						}
					</select>
				</div>
			</div>
			
		</div>
		<div class="m-portlet__foot m-portlet__foot--fit">
			<div class="m-form__actions">
				<div class="row">
					<div class="col-2">
					</div>
					<div class="col-10">
						<button type="button" class="btn btn-success" id="btnGuardar">Guardar</button>
						<a href="/Enlaces/Index" class="btn btn-secondary">Volver</a>
					</div>
				</div>
			</div>
		</div>
	</form>
</div>




