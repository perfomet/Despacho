@model Datos.Modelo.EstadoEquipo
@{
	ViewBag.SeccionTieneTitulo = true;
	ViewBag.Pagina = 11;

	if (Model.Estadoequipoid == 0)
	{
		ViewBag.Title = "Despacho - Nuevo Estado del Equipo";
		ViewBag.TituloSeccion = "Nuevo Estado del Equipo";
	}
	else
	{
		ViewBag.Title = "Despacho - " + Model.Descripcion;
		ViewBag.TituloSeccion = Model.Descripcion;
	}
	List<Datos.Modelo.Bin> bines = Datos.Datos.Bin.ObtenerBins();
}

@section Less{
	<link rel="stylesheet/less" type="text/css" href="~/Content/less/estadoequipo.less" />
}

@section Scripts{
	@Scripts.Render("~/bundles/estadoequipo")
}

<div class="m-portlet m-portlet--tab">
	<!--begin::Form-->
	<form class="m-form m-form--fit m-form--label-align-right">
		<div class="m-portlet__body">
			<input type="hidden" value="@Model.Estadoequipoid" id="id">
			<input type="hidden" value="@Model.EstaActivo" id="activo">

			<div class="form-group m-form__group row">
				<label for="example-text-input" class="col-2 col-form-label">Descripción</label>
				<div class="col-10">
					<input class="form-control m-input" type="text" value="@Model.Descripcion" id="descripcion" style="width: 50%">
				</div>
			</div>
			<div class="form-group m-form__group row">
				<label class="col-form-label col-lg-2 col-sm-12">Bin</label>
				<div class="col-lg-10 col-sm-12">
					<select class="form-control m-select2" id="bin" name="bin" multiple="multiple">
						@foreach (Datos.Modelo.Bin bin in bines)
						{
							<option value="@bin.Codigo" @(Model.Bins.Any(b => b.Bin == bin.Codigo) ? "selected" : "")>@bin.Codigo</option>
						}
					</select>
				</div>
			</div>
		</div>
		<div class="m-portlet__foot m-portlet__foot--fit">
			<div class="m-form__actions">
				<div class="row">
					<div class="col-2">
					</div>
					<div class="col-10">
						<button type="button" class="btn btn-success" id="btnGuardar">Guardar</button>
						<a href="/EstadoEquipo/Index" class="btn btn-secondary">Volver</a>
					</div>
				</div>
			</div>
		</div>
	</form>
</div>



