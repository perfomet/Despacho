@model Datos.Modelo.EmpresaTransporte
@{
	ViewBag.SeccionTieneTitulo = true;

	if (Model.EmpresaTransporteId == 0)
	{
		ViewBag.Title = "Despacho - Nueva Empresa de Transporte";
		ViewBag.TituloSeccion = "Nueva Empresa de Transporte";
	}
	else
	{
		ViewBag.Title = "Despacho - " + Model.Nombre;
		ViewBag.TituloSeccion = Model.Nombre;
	}
}

@section Less{
	<link rel="stylesheet/less" type="text/css" href="~/Content/less/empresatransporte.less" />
}

@section Scripts{
	@Scripts.Render("~/bundles/empresatransporte")
	
}

<div class="m-portlet m-portlet--tab">
	<!--begin::Form-->
	<form class="m-form m-form--fit m-form--label-align-right">
		<div class="m-portlet__body">
			<input type="hidden" value="@Model.EmpresaTransporteId" id="id">
			<input type="hidden" value="@Model.EstaActivo" id="activo">

			<div class="form-group m-form__group row">
				<label for="example-text-input" class="col-2 col-form-label">Es Propia</label>
				<div class="col-10">
					<input class="form-control m-input" type="text" value="@Model.EsPropia" id="espropia" style="width: 50%">
				</div>
			</div>
			<div class="form-group m-form__group row">
				<label for="example-text-input" class="col-2 col-form-label">Nombre</label>
				<div class="col-10">
					<input class="form-control m-input" type="text" value="@Model.Nombre" id="nombre" style="width: 50%">
				</div>
			</div>
					
		</div>
		<div class="m-portlet__foot m-portlet__foot--fit">
			<div class="m-form__actions">
				<div class="row">
					<div class="col-2">
					</div>
					<div class="col-10">
						<button type="button" class="btn btn-success" id="btnGuardar">Guardar</button>
						<a href="~/EmpresaTransporte/Index" class="btn btn-secondary">Volver</a>
					</div>
				</div>
			</div>
		</div>
	</form>
</div>


